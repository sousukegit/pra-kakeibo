<h1>ユーザー情報編集</h1>

<%= form_with model:@user,url:update_user_path,method:"patch",local:true do |f| %>
<div class="container">
<diV class="form_group">
<label>ユーザー名</label>
<%= f.text_field :name, class:"form-control"%> 
</diV>
<diV class="form_group">
<label>メールアドレス</label>
<%= f.text_field  :email, class:"form-control"%> 
</diV>
  
<%= f.submit class:"btn btn-primary"%>
<%= link_to "ログイン",signin_path, class:"btn btn-outline-secondary" %>
<% end %>
</div>
